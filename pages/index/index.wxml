<view>
<dashboard wx:if="{{PageCur=='dashboard'}}" id="dashboard"></dashboard>
<paintingwall wx:if="{{PageCur=='paintingwall'}}" id="paintingwall"></paintingwall>
<contact wx:if="{{PageCur=='contact'}}"></contact>
<mine wx:if="{{PageCur=='mine'}}"></mine>
<about wx:if="{{PageCur=='about'}}"></about>
<view class="cu-bar tabbar bg-white shadow foot">
  <view class="action" bindtap="NavChange" data-cur="dashboard">
    <view class="{{PageCur=='dashboard'?'text-green':'text-gray'}}">
        <text class="cuIcon-home lg"></text>首页
    </view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="paintingwall">
    <view class="{{PageCur=='paintingwall'?'text-green':'text-gray'}}">
        <text class="cuIcon-pic lg"></text>作品展示
    </view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="contact">
    <view class="{{PageCur=='contact'?'text-green':'text-gray'}}">
        <text class="cuIcon-message lg"></text>联系我们
    </view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="mine">
    <view class="{{PageCur=='mine'?'text-green':'text-gray'}}">
        <text class="cuIcon-my lg"></text>我的
    </view>
  </view>
</view>
</view>