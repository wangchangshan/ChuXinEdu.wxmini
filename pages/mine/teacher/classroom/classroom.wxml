<scroll-view scroll-y class="scrollPage">
    <cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
		<view slot="backText">返回</view>
        <view slot="content">选择班级</view>
    </cu-custom>

    <view class="padding text-center">
		<block wx:for="{{classroomList}}" wx:key>
        	<button bindtap="jump2Signin" data-code="{{item.value}}" class="padding-xl radius shadow-warp bg-{{item.label}} margin-top">{{item.text}}</button>
		</block>
    </view>

</scroll-view>